root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_size = 2
indent_style = space
# max_line_length = 90-ish
trim_trailing_whitespace = true

[*.{md, rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{py, ic, icp}]
indent_size = 4
insert_final_newline = true